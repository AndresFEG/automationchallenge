pipeline {
    agent any
    stages {
        stage('Clonar repo') {
            steps {
                git 'https://github.com/AndresFEG/automationchallenge.git'
            }
        }
        stage('Compilar') {
            steps {
                sh './gradlew build'
            }
        }
        stage('pruebas') {
            steps {
                sh './gradlew clean test'
'
            }
        }
    }
    post {
        always {
            junit 'build/test-results/*/.xml'
        }
    }
}